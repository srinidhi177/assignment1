#include <stdio.h>
#include <string.h>
int count(char str[]) {
    int i = 0;
    while(str[i] != '\0') {
        i++;
    }
    return i;
}
void str_rev(char str[]) {
    int start = 0;
    int end = count(str) - 1;
    char temp;

    while(start < end) {
        temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        start++;
        end--;
    }
}
void str_copy(char src[], char dest[]) {
    int i = 0;
    while(src[i] != '\0') {
        dest[i] = src[i];
        i++;
    }
    dest[i] = '\0';
}

int str_cmp(char str1[], char str2[]) {
    int i = 0;
    while(str1[i] != '\0' && str2[i] != '\0') {
        if(str1[i] != str2[i]) {
            return 0;
        }
        i++;
    }
    if(str1[i] == '\0' && str2[i] == '\0') {
        return 1;
    }
    return 0;
}

void str_cat(char str1[], char str2[]) {
    int i = 0;
    while(str1[i] != '\0') {
        i++;
    }
    while(str2[i] != '\0') {
        str1[i] = str2[i];
        i++;
    }
    str1[i] = '\0';
}

int main() {
    char str1[100], str2[100];
    int choice;

    printf("Enter the string: ");
    scanf("%s", str1);

    printf("Enter the operation to perform:\n");
    printf("1. Length of the string\n");
    printf("2. Reversal of a string\n");
    printf("3. Copying of the string\n");
    printf("4. Comparision of 2 strings\n");
    printf("5. Concatination of 2 strings\n");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("Length of the string: %d\n", count(str1));
            break;
        case 2:
            str_rev(str1);
            printf("Reversed string: %s\n", str1);
            break;
        case 3:
            char str3[100];
            printf("Enter the string to copy: ");
            scanf("%s", str3);
            str_copy(str3, str1);
            printf("Copied string: %s\n", str1);
            break;
        case 4:
            printf("Enter the second string: ");
            scanf("%s", str2);
            if(str_cmp(str1, str2)) {
                printf("Strings are equal\n");
            } else {
                printf("Strings are not equal\n");
            }
            break;
        case 5:
            char str4[100];
            printf("Enter the second string: ");
            scanf("%s", str4);
            str_cat(str1, str4);
            printf("Concatenated string: %s\n", str1);
            break;
        default:
            printf("Invalid choice\n");
    }

    return 0;
}
